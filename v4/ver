echo "Đang kiểm tra phiên bản" && sleep 1 && v="4.0" && ver=$(curl -s --connect-timeout 5 https://raw.githubusercontent.com/caotu2k5/v111/main/ver) && echo "Phiên bản hiện tại: " $v && if [ "$v" == "$ver" ]; then echo "Bạn đang ở phiên bản mới nhất";  else echo "Có bản cập nhật mới, sẽ tự động cập nhật sau 2s" && sleep 2 && clear; echo "Đang cập nhật" && apt update && apt upgrade -y;
clear; echo "Đang cập nhật"
cd && cd && cd $HOME && cd /data/data/com.termux/files/usr/bin/ && pkg install wget -y && wget https://github.com/caotu2k5/v4/raw/main/v4.zip && unzip v4.zip && chmod a+x tun && chmod a+x psiphon-tunnel-core && chmod a+x qexit && chmod a+x wl && chmod a+x ver && chmod a+x v4man && chmod a+x qoa && chmod a+x v4a;
clear; echo "Đang cập nhật"
cd && cd && cd $HOME && cd /data/data/com.termux/files/usr/etc/ && pkg install wget -y && wget https://github.com/caotu2k5/v4/raw/main/t1 && mv t1 motd;
clear; echo "Đang cập nhật"
cd && cd && cd $HOME && cd /data/data/com.termux/files/usr/bin/ && pkg install wget -y && wget https://github.com/caotu2k5/v4/raw/main/l1 && chmod +x * && mv l1 login;
clear; echo "Đang cập nhật"
echo "Đã cập nhật thành công";
login;
fi && echo " "